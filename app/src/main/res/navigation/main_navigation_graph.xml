<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/bottom_navigation"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="com.tomaszkopacz.kawernaapp.ui.main.board.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment android:id="@+id/statisticsFragment" android:name="com.tomaszkopacz.kawernaapp.ui.main.statistics.StatisticsFragment"
              android:label="fragment_statistics" tools:layout="@layout/fragment_statistics"/>

    <fragment android:id="@+id/accountFragment" android:name="com.tomaszkopacz.kawernaapp.ui.main.profile.AccountFragment"
              android:label="fragment_account" tools:layout="@layout/fragment_account"/>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.tomaszkopacz.kawernaapp.ui.main.details.DetailsFragment"
        android:label="fragment_fragment_details"
        tools:layout="@layout/fragment_details" />

</navigation>